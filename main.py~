import serial
import time

#シリアル通信(PC⇔Arduino)
ser = serial.Serial()
ser.port = "/dev/cu.usbmodem14311"     #デバイスマネージャでArduinoのポート確認
ser.baudrate = 115200 #Arduinoと合わせる
ser.setDTR(False)     #DTRを常にLOWにしReset阻止
ser.open()            #COMポートを開く
for i in range(10):
  ser.write(b'1')       #送りたい内容をバイト列で送信
  time.sleep(1)
  ser.write(b'0')
  time.sleep(1)
ser.close()           #COMポートを閉じる
